---
import "photoswipe/style.css";
---

<section class="bg-slate-100 pt-10 pb-10">
  <h1 class="text-2xl md:text-6xl mx-auto w-fit">Galería de Imágenes</h1>
  <div
    class="grid md:grid-cols-3 mx-auto w-3/4 items-center gap-10 mt-10"
    id="my-gallery"
  >
    {
      Array.from({ length: 9 }).map((_, i) => (
        <a
          class="w-full h-64 object-cover"
          href={`/assets/gallery/img-${i + 1}.webp`}
          target="_blank"
          data-pswp-width="1200"
          data-pswp-height="800"
        >
          <img
            class="w-full h-64 object-cover rounded-xl"
            src={`/assets/gallery/img-${i + 1}.webp`}
            alt=""
          />
        </a>
      ))
    }
  </div>
</section>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
